{
  "name": "all-influencer-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sdk:generate": "cd packages/sdk && npx ts-node scripts/generate-client.ts",
    "db:up": "docker compose -f db/postgres/docker-compose.yml up -d",
    "db:down": "docker compose -f db/postgres/docker-compose.yml down -v",
    "db:migrate": "docker exec -i allinfluencer-postgres psql -U allinfluencer -d allinfluencer -f /sql/001_schema.sql",
    "db:seed": "docker exec -i allinfluencer-postgres psql -U allinfluencer -d allinfluencer -f /sql/002_seed.sql",
    "db:logs": "docker logs -f allinfluencer-postgres"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0"
  }
}
